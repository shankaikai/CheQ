<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cheq">
    <!-- Enables internet access -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Users.RestaurantPageActivity"
            android:noHistory="true"
            android:screenOrientation="nosensor"></activity>
        <!-- SplashScreen -->
        <activity
            android:name=".Login.SplashScreen"
            android:noHistory="true"
            android:theme="@style/SplashScreen"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- LoginActivity -->
        <activity
            android:name=".Login.LoginActivity"
            android:noHistory="true"
            android:theme="@style/AppTheme"
            android:screenOrientation="nosensor"/> <!-- RegistrationActivity -->
        <activity
            android:name=".Login.RegistrationActivity"
            android:noHistory="true"
            android:screenOrientation="nosensor"/> <!-- PasswordActivity -->
        <activity
            android:name=".Login.PasswordActivity"
            android:noHistory="true"
            android:screenOrientation="nosensor"/> <!-- MainActivity -->
        <activity android:name=".MainActivity"
            android:screenOrientation="nosensor"/> <!-- DoneActivity -->
        <activity
            android:name=".Login.DoneActivity"
            android:noHistory="true"
            android:screenOrientation="nosensor"/> <!-- RestaurantActivity -->
        <activity
            android:name=".Restaurant.RestaurantActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="nosensor"/>
        <activity
            android:name=".Restaurant.RestaurantAllQueuesActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="nosensor"/>
        <activity android:name=".Login.RestaurantOnboard.RestaurantOnboardingActivity"
            android:screenOrientation="nosensor"/>
        <activity android:name=".Login.RestaurantOnboard.RestaurantOnboardingMenuActivity"
            android:screenOrientation="nosensor">
        
        </activity>
        <activity
            android:name=".Users.UserActivity"
            android:screenOrientation="nosensor"/>
    </application>

</manifest>