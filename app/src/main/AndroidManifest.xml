<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cheq">

    <!--Enables internet access-->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--First Activity that will be launched-->
        <activity android:name="com.example.cheq.SplashScreen"
            android:theme="@style/SplashScreen"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--LoginActivity-->
        <activity android:name="com.example.cheq.Login.LoginActivity"
            android:theme="@style/AppTheme"
            android:noHistory="true"/>

        <!--MainActivity-->
        <activity android:name="com.example.cheq.MainActivity"></activity>
        <activity android:name="com.example.cheq.Restaurant.RestaurantActivity"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>